@import 'helpers/mixins'
// @import 'helpers/variables'

html
	height 100%
	box-sizing border-box

body
	min-height 100%
	min-width 320px
	margin 0

*, *::before, *::after
	box-sizing inherit

img
	max-width 100%
	height auto

.sprite
	display none

.visually-hidden
	position absolute
	width 1px
	height 1px
	margin -1px
	padding 0
	border none
	overflow hidden
	white-space nowrap
	clip rect(0,0,0,0)
	clip-path inset(100%)

.container
	max-width 1170px
	margin 0 auto
	padding 0 15px

@media (min-width: 1024px)	
	body
		display flex
		flex-direction column
		
	.page
		flex-grow 1

